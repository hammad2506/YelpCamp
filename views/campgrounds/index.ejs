<% include ../partials/header.ejs %>



    <div class="jumbotron">
            <h1>Welcome to YelpCamp</h1>
            <h3>View our hand-pick CampGrounds from all around the world</h3>
            <p><a class="btn btn-lg btn-primary" href="/campgrounds/new">Add new CampGround</a></p>
    </div>



    <div class="row" style="display:flex; flex-wrap:wrap;text-align:center">
   
    
    <% for (var i=0; i<campgrounds.length; i++){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <image src="<%= campgrounds[i].image %>"></image>
                <div class="caption">
                    <h4> <%= campgrounds[i].name %> </h4>
                </div>
                <p><a class="btn-primary btn" href="/campgrounds/<%=campgrounds[i]._id%>">More Info</a></p>    
            </div>
        </div>        
    
    <% } %>
    
    
    
    </div>


<% include ../partials/footer.ejs %>